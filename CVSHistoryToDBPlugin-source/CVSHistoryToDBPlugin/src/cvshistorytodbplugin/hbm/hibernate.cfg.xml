	<mapping resource="cvshistorytodbplugin/hbm/DBRepository.hbm.xml" />
	<mapping resource="cvshistorytodbplugin/hbm/DBTag.hbm.xml" />
	<mapping resource="cvshistorytodbplugin/hbm/Workspace.hbm.xml" />

   
  </session-factory>
